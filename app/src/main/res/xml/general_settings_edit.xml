            android:title="@string/backup_and_restore"
            android:key="backup"/>
    </com.example.hideaki.reminder.MyPreferenceCategory>

    <com.example.hideaki.reminder.MyPreferenceCategory
        android:title="@string/about">

        <PreferenceScreen
            android:title="@string/version"
            android:summary="1.0"
            android:key="version"/>

        <PreferenceScreen
            android:title="@string/about_this_app"
            android:key="this_app"/>
    </com.example.hideaki.reminder.MyPreferenceCategory>

