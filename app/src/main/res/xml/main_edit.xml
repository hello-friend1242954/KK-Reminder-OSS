<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="detail"
        android:persistent="false" />

    <com.example.hideaki.reminder.DatePickerPreference android:persistent="false" />

    <PreferenceCategory
        android:key="color"
        android:title="@string/pick_color">

        <PreferenceScreen
            android:key="primary_color"
            android:title="@string/pick_primary_color"/>

        <PreferenceScreen
            android:key="secondary_color"
            android:title="@string/pick_secondary_color"/>

    </PreferenceCategory>

    <PreferenceScreen
        android:key="tag"
        android:title="@string/tag" />

    <PreferenceCategory android:title="@string/notify_option">
        <PreferenceScreen
            android:key="interval"
            android:title="@string/interval" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/repeat_option">
        <PreferenceScreen
            android:key="repeat_day_unit"
            android:title="@string/repeat_day_unit" />
        <PreferenceScreen
            android:key="repeat_minute_unit"
            android:title="@string/repeat_minute_unit"
            android:summary="@string/none"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/alarm_option">
        <PreferenceScreen
            android:key="pick_alarm"
            android:title="@string/pick_alarm"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="notes_category"
        android:title="@string/notes">
        <EditTextPreference
            android:key="notes"
            android:height="60dp"
            android:persistent="false" />
    </PreferenceCategory>

</PreferenceScreen>